<br>
<div class="container">
  <%= form_tag('/search') do %>
    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          <label>Из: 
          <%= select_tag "cityFromId", options_from_collection_for_select(DepartCity.all, "sletat_id", "name"), class: 'form-control' %>
          </label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          <label>В: 
          <%= select_tag "countryId", options_from_collection_for_select(Country.all, "sletat_id", "name"), class: 'form-control' %>
          </label>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= submit_tag 'Поиск', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
<br>
<% if @aaData %>
<table>
	<tr>
		<th>Название отеля</th>
		<th>Дата вылета</th>
		<th>Дата прибытия</th>
    <th>Страна</th>
    <th>Картинка</th>
		<th>Цена</th>
	</tr>
<% @aaData.each do |aaData| %>
	<tr>
		<td><%= link_to aaData[7], aaData[2] %></td>
		<td><%= aaData[12] %></td>
		<td><%= aaData[13] %></td>
    <td><%= aaData[31] %></td>
    <td><%= image_tag aaData[29], width: 100 %></td>
		<td><%= aaData[42] %> <%= aaData[43] %></td>
	</tr>
<% end %>
</table>
<% end %>
